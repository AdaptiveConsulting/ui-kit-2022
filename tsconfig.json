{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react-jsx",
    "paths": {
      "@ui-kit-2022/*": ["packages/*/src/index.ts"]
    }
  },
  "files": [],
  "references": [
    { "path": "packages/ui-kit-components" },
    { "path": "packages/ui-kit-theme" }
  ],
  "exclude": ["**/node_modules", "**/dist"]
}
